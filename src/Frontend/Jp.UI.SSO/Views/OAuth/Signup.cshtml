@model Jp.UI.SSO.Models.RegisterViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@inject IViewLocalizer Localizer
@{
    Layout = "../Shared/_LayoutExt.cshtml";
}
<div class="d-flex flex-column flex-root">
    <!--begin::Login-->
    <div class="login login-4 login-signin-on d-flex flex-row-fluid" id="kt_login">
        <div class="d-flex flex-center flex-row-fluid bgi-size-cover bgi-position-top bgi-no-repeat" style="background-image: url('assets/media/bg/finance.jpg');">
            <div class="login-form text-center p-7 position-relative overflow-hidden card px-15 py-20">
                <!--begin::Login Header-->
                <div class="d-flex flex-center mb-15">
                    <a href="#">
                        <img src="assets/media/logos/logo-letter-13.png" class="max-h-75px" alt="" />
                    </a>
                </div>
                <!--end::Login Header-->

                <!--begin::Login Sign up form-->
                <div >
                    <div style="margin-bottom: 10px">
                        <h3>Sign Up</h3>
                        <div class="text-muted font-weight-bold">Enter your details to create your account</div>
                    </div>
                    @await Html.PartialAsync("_ValidationSummary")
                <form asp-controller="OAuth" asp-action="Register" class="form text-left" id="">
                    <div class="form-group text-left mb-1">
                        <input class="form-control form-control-sm h-auto py-4 px-8 cust-input" type="text" placeholder="Username" asp-for=Username autofocus autocomplete="off" tabindex="1" />
                    </div>
                    <div class="form-group text-left mb-1">
                        <input class="form-control form-control-sm h-auto py-4 px-8 cust-input" type="text" placeholder="Email" asp-for=Email autofocus autocomplete="off" tabindex="2" />
                    </div>
                    <div class="form-group text-left mb-1">
                        <input class="form-control form-control-sm h-auto py-4 px-8 cust-input" type="password" placeholder="Password" asp-for=Password autofocus autocomplete="off" tabindex="3" />
                    </div>
                    <div class="form-group text-left mb-1">
                        <input class="form-control form-control-sm h-auto py-4 px-8 cust-input" type="password" placeholder="Confirm Password" asp-for=ConfirmPassword autofocus autocomplete="off" tabindex="4" />
                    </div>
                    <div class="form-group mb-4 mt-2 text-left">
                        <div class="checkbox-inline">
                            <label asp-for="Accept" class="checkbox m-0 checkbox-outline  checkbox-success" tabindex="5">
                                <input asp-for=Accept type="checkbox" />
                                <span></span>
                                I Agree the <a href="#" class="font-weight-bold ml-1 text-success">terms and conditions</a>.
                            </label>
                        </div>
                        <div class="form-text text-muted text-center"></div>
                    </div>
                    <div class="form-group d-flex flex-wrap flex-center mt-2 mb-0">
                        <button id="kt_login_signup_submit" class="btn btn-success btn-block px-9 py-3 my-0 mx-0 font-size-lg font-size-h4 cust-btn" tabindex="6">Sign Up</button>
                    </div>

                    <div class="mt-10 text-center">
                        <span class="opacity-70 mr-0">
                            Already have an account?
                        </span>
                        <button asp-controller="Account" asp-action="Login" class="btn btn-outline pt-0 pb-0 py-0 px-0 mx-0 text-success font-weight-bolder" style="vertical-align: top; margin-top: -2px !important;">Sign in now!</button>
                    </div>
                </form>
                </div>
                <!--end::Login Sign up form-->

                <!--begin::Login forgot password form-->
                <div class="login-forgot">
                    <div class="mb-10">
                        <h3>Forget your password?</h3>
                        <div class="text-muted font-weight-bold">Enter your primary email address and we’ll send you instructions on how to reset your password.</div>
                    </div>
                    <form class="form" id="">
                        <div class="form-group mb-1">
                            <input class="form-control form-control-sm h-auto py-4 px-8 cust-input" type="text" placeholder="Name" name="forgetname" autocomplete="off" tabindex="1" />
                        </div>
                        <div class="form-group mb-1">
                            <input class="form-control form-control-sm h-auto py-4 px-8 cust-input" type="email" placeholder="Email" name="email" autocomplete="off" tabindex="1" />
                        </div>
                        <div class="form-group text-left mb-1">
                            <input class="form-control form-control-sm h-auto py-4 px-8 cust-input" type="email" placeholder="Confirm email" name="cemail" tabindex="4">
                        </div>
                        <div class="form-group d-flex flex-wrap flex-center mt-18-d">
                            <button id="kt_login_forgot_submit" class="cust-btn btn btn-success btn-block font-weight-bold" tabindex="2">Request</button>
                            <button id="kt_login_forgot_cancel" class="cust-btn btn btn-light-success btn-block font-weight-bold mt-3" tabindex="3">Cancel</button>
                        </div>
                    </form>
                </div>
                <!--end::Login forgot password form-->
            </div>
        </div>
    </div>
    <!--end::Login-->
</div>